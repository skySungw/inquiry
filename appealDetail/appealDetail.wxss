.appealDetail {
  display: flex;
  flex-direction: column;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color:#fff;
  position: relative;
}

.appealDetail .titleBox {
  height: 190rpx;
  opacity: 1;
  background: linear-gradient(270deg,#2c7bff, #4fb1ff);
}

.appealDetail .titleBox .status {
  opacity: 1;
  font-size: 36rpx;
  font-weight: 500;
  text-align: left;
  color: #fff;
  line-height: 50rpx;
  margin-top: 50rpx;
  margin-left: 30rpx;
}

.appealDetail .titleBox .verifyDesc {
  opacity: 0.8;
  font-size: 24rpx;
  font-weight: 500;
  text-align: left;
  color: #fff;
  line-height: 33rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.appealDetail image {
  position: absolute;
  width: 184rpx;
  height: 184rpx;
  opacity: 1;
  top: 0;
  right: 40rpx;
  z-index: 10;
}

.appealDetail .processBox {
  background-color:#fff;
}

.processOne .processContent{
  border-left: 2rpx solid #eaf4ff;
  padding: 0 30rpx;
  margin-left: 40rpx;
  position: relative;
}

.processContent .processStep{
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  opacity: 1;
  background: #00b955;
  border-radius: 50%;
  left: -7rpx;
}

.processContent .statusBox {
  margin-top: 40rpx;
  margin-bottom: 12rpx;
}
.processContent .statusBox .title {
  opacity: 1;
  font-size: 28rpx;
  font-weight: 500;
  text-align: left;
  float: left;
  color: #333;
  line-height: 40rpx;
  position: relative;
  top: -12rpx;
}

.processContent .statusBox .time {
  opacity: 1;
  font-size: 24rpx;
  font-weight: 400;
  text-align: right;
  color: #666;
  line-height: 33rpx;
  position: relative;
  top: -5rpx;
}

.processContent .content{
  opacity: 1;
  font-size: 28rpx;
  font-weight: 400;
  text-align: left;
  color: #666;
  line-height: 40rpx;
}