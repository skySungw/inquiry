.waitingBox {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color:#fff;
}
.waitingBox image {
  opacity: 1;
  width: 320rpx;
  height: 260rpx;
}
.waitingBox .waitingTip {
  opacity: 1;
  font-size: 30rpx;
  font-weight: 400;
  color: #9d9fb8;
}