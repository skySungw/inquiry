/* pages/inquiry//inquiryActive/inquiryActive.wxss */
@import '../../../common/tableView.wxss';
.container {
  background: #63C98C;
  padding-bottom: 50rpx;
  min-height: 100vh;
}

.container .top-image {
  width: 100%;
  height: 458rpx;
}

.container .coupons {
  padding: 0 24rpx;
}

.container .banner {
  margin: 20rpx 24rpx;
  border-radius: 12rpx;
  height: 180rpx;
}

.container .banner__item image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.product-title {
  color: #0F9A4F;
  font-size: 32rpx;
  font-weight: bold;
  width: 356rpx;
  height: 72rpx;
  line-height: 72rpx;
  margin: 30rpx auto;
  text-align: center;
  border-radius: 72rpx;
  background: linear-gradient(to bottom, #C6FAA2 ,#A7EC7B);
  box-sizing: 0 8rpx 8rpx 0 rgba(119,69,51,0.1);
}

.common_section {
  background: none;
  margin: 0 24rpx;
}

.common_section .cell {
  padding: 24rpx;
  margin: 20rpx 0;
  background: #FFFFFF;
  border-radius: 12rpx;
}

.common_section .cell .cell_left {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  flex-shrink: 0;
  margin-right: 32rpx;
}

.common_section .cell .cell_left image {
  width: 100%;
  height: 100%;
}

.common_section .cell .cell_left .tag {
  width: 72rpx;
  height: 72rpx;
  color: #FFFFFF;
  font-size: 22rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
}

.common_section .cell .cell_center {
  font-size: 24rpx;
  color: #41435D;
}

.common_section .cell .cell_center .name{
  font-size: 32rpx;
  color: #111334;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.common_section .cell .cell_center .btns {
  display: flex;
  width: 335rpx;
  height: 78rpx;
  background: #FC6442;
  border-radius: 8px;
  text-align: center;
  color: #FFFFFF;
  margin-top: 20rpx;
}

.common_section .cell .cell_center .btns .button {
  width: 200rpx;
  line-height: 78rpx;
  font-size: 28rpx;
}

.common_section .cell .cell_center .price-box {
  width: 134rpx;
  background: linear-gradient(90deg,#fcd603, #ffe32a 99%);
  border-radius: 8rpx;
  color: #FF2121
}

.common_section .cell .cell_center .price {
  font-size: 32rpx;
  font-weight: bold;
}

.common_section .cell .cell_center .price-height {
  line-height: 78rpx;
}

.common_section .cell .cell_center .symbol {
  font-size: 24rpx;
}

.common-line-price {
  color: #FF2121 !important
}

.common-line-price::before{
  background: #FF2121;
}