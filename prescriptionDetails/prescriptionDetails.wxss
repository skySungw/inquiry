/* pages/onlineGoods/prescriptionDetails/prescriptionDetails.wxss */
/* @import '../../../common/tableView.wxss'; */
page {
  background-color: #f5f5f5;
  font-size: 24rpx;
  color: #30303c;
}

.tips {
  text-align: center;
  color: #FF2121;
  font-size: 28rpx;
  background: #FFEEEE;
  padding: 16rpx 30rpx;
}

.top-box {
  background: #FFFFFF;
  padding: 30rpx;
  border-radius: 20rpx;
  margin: 30rpx;
}

.top-box .status-box {
  width: 100%;
  position: relative;
  /*display: flex;*/
  /*justify-content: space-around;*/
}

.top-box .status-box .cell {
  text-align: center;
  position: relative;
  flex: 1
}

.top-box .status-box .cell::after {
  content: '';
  position: absolute;
  top: 19rpx;
  right: -40%;
  border: 1rpx dashed #00b955;
  width: 80%;
}

.top-box .status-box .cell:last-child::after {
  border: 0;
}

.top-box .status-box .waiting:nth-last-child(2)::after {
  border-color: #CCCCCC;
}

.top-box .status-box .cell text {
  display: block;
  margin-top: 20rpx;
  color: #999999;
}

.top-box .button {
  border-radius: 8rpx;
  background: #F7F7F7;
  color: #999999;
  text-align: center;
  line-height: 1.5;
  padding: 18rpx;
  margin-top: 30rpx;
}

.cf-box {
  width: 690rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  border: 1px solid rgba(231, 234, 236, 1);
  margin: 0 auto;
  padding: 40rpx 0 30rpx 0;
  margin-top: 20rpx;
  position: relative;
}

.cf-nr {
  width: 630rpx;
  margin: 0 auto;
}

.cf-title {
  font-size: 40rpx;
  color: #30303c;
  font-weight: 600;
  text-align: center;
}

.cf-title-2 {
  margin-top: 8rpx;
}

.cf-time {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  font-size: 24rpx;
  color: #30303c;
  margin-top: 30rpx;
}

.cf-info {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  font-size: 24rpx;
  color: #30303c;
  margin-top: 20rpx;
}

.top_20 {
  margin-top: 20rpx;
}

.top_10 {
  margin-top: 10rpx;
  color: #515163;
}

.border_solid {
  border-bottom: 1rpx solid #777785;
  padding-bottom: 20rpx;
}

.cf-rp {
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(48, 48, 60, 1);
  margin-top: 20rpx;
}

.cf-ps {
  font-size: 24rpx;
  color: #515163;
  margin-top: 30rpx;
}

.cf-info-qm {
  width: 150rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
}

.cf-info-qm-nr {
  height: 50rpx;
  line-height: 50rpx;
}

.cf-yz {
  width: 250rpx;
  position: absolute;
  right: 45rpx;
  bottom: 110rpx;
}
/* 灵芝1.7.0 */
.img{
  display: block;
  width: 690rpx;
  height: auto;
  margin: 0 auto;
  margin-top: 20rpx;
}

.bottom-button {
  margin: 30rpx;
  background: #00b955;
  color: #FFFFFF;
  border-radius: 50rpx;
}
/* 扫码问诊 */
.banner{
  display: block;
  width: 702rpx;
  height: 134rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
/*扫码视频问诊*/
.close-cause{
  width: 100%;
  line-height: 64rpx;
  background: #ffeeee;
  font-size: 28rpx;
  font-weight: 400;
  text-align: center;
  color: #f93a4a;
}
.prompting{
  border-radius: 8rpx;
  line-height: 1.5;
  background: #F7F7F7;
  color: #999999;
  margin-top: 30rpx;
  padding: 20rpx 24rpx;
  text-align: left;
}
.video-info{
  background: #FFFFFF;
  padding: 30rpx;
  border-radius: 20rpx;
  margin: 30rpx;
  line-height: 2;
  color: #111734;
  font-size: 30rpx;
}
.video-info-header{
  display: flex;
  border-bottom: 1px solid #eee;
  padding-bottom: 15rpx;
  margin-bottom: 12rpx;
  align-items: flex-end;
}
.video-info-header >view{
  margin-right: 15rpx;
  font-size: 28rpx;
  color: #9aa0b5;
}
.video-info-header view:first-child{
  font-size: 32rpx;
  color: #111734;
  font-weight: 500;
}
.video-info-main >view{
  display: flex;
  word-break: break-all;
}
.video-info-main >view >view:first-child{
  flex-shrink: 0;
  width: 155rpx;
  color: #9aa0b5;
}
.drug{
  flex-wrap: wrap;
}
/*视频问诊新增*/
.line {
  border-bottom: 1px dashed #d8d8d8;
  width: 447rpx;
  position: absolute;
  top: 19rpx;
  left:50%;
  transform: translateX(-50%);
  z-index: 0;
}
.icon_cont {
  display: flex;
  width: 100%;
  position: absolute;
  z-index: 10;
}
.icon_cont >view{
  flex: 1;
}
.icon_cont view {
  width: 38rpx;
  height: 38rpx;
  display: inline-block;
  text-align: center;
}
.icon_cont image {
  width: 38rpx;
  height: 38rpx;
}
.list_cont_status {
  width: 100%;
  margin-top: 60rpx;
  display: flex;
}
.list_cont_status >view{
  flex: 1;
  text-align: center;
}

.fixed-btn {
  position: fixed;
  right: 0;
  bottom: 25%;
  height: 90rpx;
  padding: 0 30rpx;
  color: #FFFFFF;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  border-top-left-radius: 90rpx;
  border-bottom-left-radius: 90rpx;
  background: #00b955;
}